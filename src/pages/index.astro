---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Food blog">
  <main class="max-w-screen-lg mx-auto">
    <div class="flex flex-wrap justify-start my-5">
      <div class="w-full sm:w-1/2 md:w-1/3 p-3">
        <img
          src="/recipe/pexels-bowl.jpg"
          alt="bowl"
          class="h-56 w-full rounded-lg mb-2"
        />
        <span class="text-lg font-medium">Bowl</span>
      </div>
      <div class="w-full sm:w-1/2 md:w-1/3 p-3">
        <img
          src="/recipe/pexels-couscous.jpg"
          alt="couscous"
          class="h-56 w-full rounded-lg mb-2"
        />
        <span class="text-lg font-medium">Couscous</span>
      </div>
      <div class="w-full sm:w-1/2 md:w-1/3 p-3">
        <img
          src="/recipe/pexels-kichererbsen.jpg"
          alt="kichererbsen"
          class="h-56 w-full rounded-lg mb-2"
        />
        <span class="text-lg font-medium">Kichererbsen</span>
      </div>
      <div class="w-full sm:w-1/2 md:w-1/3 p-3">
        <img
          src="/recipe/pexels-lunch.jpg"
          alt="lunch"
          class="h-56 w-full rounded-lg mb-2"
        />
        <span class="text-lg font-medium">Lunch</span>
      </div>
      <div class="w-full sm:w-1/2 md:w-1/3 p-3">
        <img
          src="/recipe/pexels-salad.jpg"
          alt="salad"
          class="h-56 w-full rounded-lg mb-2"
        />
        <span class="text-lg font-medium">Salat</span>
      </div>
      <div class="w-full sm:w-1/2 md:w-1/3 p-3">
        <img
          src="/recipe/pexels-sweet-potatoes.jpg"
          alt="sweet-potatoes"
          class="h-56 w-full rounded-lg mb-2"
        />
        <span class="text-lg font-medium">Süßkartoffeln</span>
      </div>
    </div>
  </main>
</Layout>
