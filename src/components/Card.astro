---
export interface Props {
  name: string;
  img: string;
}

const { name, img } = Astro.props;
---

<div class="w-full sm:w-1/2 md:w-1/3 p-3 hover:text-green-400 cursor-pointer">
  <img
    src={`/recipe/pexels-${img}.jpg`}
    alt="bowl"
    class="h-56 w-full rounded-lg mb-2"
  />
  <span class="text-lg font-bold">{name}</span>
</div>
